<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FC">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">


        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_titulo"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_subtitle"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="16dp"/>


        <!-- Usuario -->
        <EditText
            android:id="@+id/edtUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="@string/hint_codigo_asesor"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/helper_usuario"
            android:textSize="12sp"
            android:textColor="#666666"
            android:paddingTop="4dp"/>


        <Space android:layout_width="match_parent" android:layout_height="12dp"/>


        <!-- Contraseña -->
        <EditText
            android:id="@+id/edtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="@string/hint_contrasena"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/helper_contrasena"
            android:textSize="12sp"
            android:textColor="#666666"
            android:paddingTop="4dp"/>


        <!-- Olvidaste contraseña -->
        <TextView
            android:id="@+id/lnkForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textSize="13sp"
            android:textColor="#1A73E8"
            android:paddingTop="8dp"/>


        <!-- Mensajes (error/ok) -->
        <TextView
            android:id="@+id/txtMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:paddingTop="10dp"
            android:visibility="visible"/>


        <Space android:layout_width="match_parent" android:layout_height="16dp"/>


        <!-- BOTÓN PRINCIPAL: INGRESAR (arriba, ancho completo) -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_ingresar"
            android:minHeight="48dp"/>


        <Space android:layout_width="match_parent" android:layout_height="12dp"/>


        <!-- ACCIONES SECUNDARIAS: VOLVER y SALIR (abajo, lado a lado) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">


            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_volver"
                android:minHeight="48dp"/>


            <Space android:layout_width="12dp" android:layout_height="0dp"/>


            <Button
                android:id="@+id/btnExit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_salir"
                android:minHeight="48dp"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>


